<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/viewed"
        android:fontFamily="@font/graphik_semibold"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/viewedAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viewed"
        app:layout_constraintBottom_toBottomOf="@id/viewed"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        android:text="@string/all"
        android:clickable="true"
        android:textColor="@color/purple_clickable_color"
        android:fontFamily="@font/graphik_medium"
        android:textSize="14sp"
        android:focusable="true" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewedRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/viewed"
        app:layout_constraintStart_toStartOf="@id/viewed"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/collections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toBottomOf="@id/viewedRecycler"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/collections"
        android:fontFamily="@font/graphik_semibold"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/collectionsImagePlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_plus"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/collections"
        app:layout_constraintStart_toStartOf="@id/collections"/>
    <TextView
        android:id="@+id/collectionsTextCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_my_collection"
        android:clickable="true"
        android:fontFamily="@font/graphik_light"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/collectionsImagePlus"
        app:layout_constraintBottom_toBottomOf="@id/collectionsImagePlus"
        app:layout_constraintStart_toEndOf="@id/collectionsImagePlus"
        android:focusable="true" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectionsRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="36dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/collectionsImagePlus"
        app:layout_constraintStart_toStartOf="@id/collections"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toBottomOf="@id/collectionsRecycler"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/you_were_interested"
        android:fontFamily="@font/graphik_semibold"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/interestAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/interest"
        app:layout_constraintBottom_toBottomOf="@id/interest"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        android:text="@string/all"
        android:clickable="true"
        android:textColor="@color/purple_clickable_color"
        android:fontFamily="@font/graphik_medium"
        android:textSize="14sp"
        android:focusable="true" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/interestRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/interest"
        app:layout_constraintStart_toStartOf="@id/interest"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>