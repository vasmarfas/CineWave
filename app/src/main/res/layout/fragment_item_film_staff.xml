<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="207dp"
    android:layout_height="68dp"
    android:layout_marginEnd="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/staffPhoto"
        android:layout_width="49dp"
        android:layout_height="68dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/staffName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graphik_regular"
        android:textSize="14sp"
        android:textColor="@color/light_text_color"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/temp_staffname"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="@id/staffPhoto"
        app:layout_constraintStart_toEndOf="@id/staffPhoto"
        app:layout_constraintBottom_toTopOf="@id/staffRole"/>
    <TextView
        android:id="@+id/staffRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/graphik_regular"
        android:textSize="12sp"
        android:textColor="#838390"
        android:text="@string/temp_staffrole"
        android:maxLines="1"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/staffName"
        app:layout_constraintStart_toStartOf="@id/staffName"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- drawable/frame_7294.xml -->



</androidx.constraintlayout.widget.ConstraintLayout>