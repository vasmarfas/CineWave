<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textCineWave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CineWave"
            android:fontFamily="@font/graphik_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="55dp"
            android:layout_marginStart="26dp"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/premieres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            app:layout_constraintTop_toBottomOf="@id/textCineWave"
            app:layout_constraintStart_toStartOf="@id/textCineWave"
            android:text="@string/premieres"
            android:fontFamily="@font/graphik_semibold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/premieresAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/premieres"
            app:layout_constraintBottom_toBottomOf="@id/premieres"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:text="@string/all"
            android:clickable="true"
            android:textColor="@color/purple_clickable_color"
            android:fontFamily="@font/graphik_medium"
            android:textSize="14sp"
            android:focusable="true" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/premieresRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/premieres"
            app:layout_constraintStart_toStartOf="@id/textCineWave"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/premieresRecycler"
            app:layout_constraintStart_toStartOf="@id/premieresRecycler"
            android:text="@string/popular"
            android:fontFamily="@font/graphik_semibold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/popularAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/popular"
            app:layout_constraintBottom_toBottomOf="@id/popular"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:text="@string/all"
            android:textColor="@color/purple_clickable_color"
            android:fontFamily="@font/graphik_medium"
            android:textSize="14sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintTop_toBottomOf="@id/popular"
            app:layout_constraintStart_toStartOf="@id/popular"
            app:layout_constraintEnd_toEndOf="parent"

            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/dynamic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/popularRecycler"
            app:layout_constraintStart_toStartOf="@id/popularRecycler"
            android:text="@string/dynamic_1"
            android:fontFamily="@font/graphik_semibold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/dynamic1All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/dynamic1"
            app:layout_constraintBottom_toBottomOf="@id/dynamic1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:text="@string/all"
            android:textColor="@color/purple_clickable_color"
            android:fontFamily="@font/graphik_medium"
            android:textSize="14sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dynamic1Recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintTop_toBottomOf="@id/dynamic1"
            app:layout_constraintStart_toStartOf="@id/dynamic1"
            app:layout_constraintEnd_toEndOf="parent"

            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/top250"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/dynamic1Recycler"
            app:layout_constraintStart_toStartOf="@id/dynamic1Recycler"
            android:text="@string/top250"
            android:fontFamily="@font/graphik_semibold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/top250All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/top250"
            app:layout_constraintBottom_toBottomOf="@id/top250"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:text="@string/all"
            android:textColor="@color/purple_clickable_color"
            android:fontFamily="@font/graphik_medium"
            android:textSize="14sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top250Recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintTop_toBottomOf="@id/top250"
            app:layout_constraintStart_toStartOf="@id/top250"
            app:layout_constraintEnd_toEndOf="parent"

            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/dynamic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/top250Recycler"
            app:layout_constraintStart_toStartOf="@id/top250Recycler"
            android:text="@string/dynamic2"
            android:fontFamily="@font/graphik_semibold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/dynamic2All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/dynamic2"
            app:layout_constraintBottom_toBottomOf="@id/dynamic2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:text="@string/all"
            android:textColor="@color/purple_clickable_color"
            android:fontFamily="@font/graphik_medium"
            android:textSize="14sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dynamic2Recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintTop_toBottomOf="@id/dynamic2"
            app:layout_constraintStart_toStartOf="@id/dynamic2"
            app:layout_constraintEnd_toEndOf="parent"

            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/dynamic2Recycler"
            app:layout_constraintStart_toStartOf="@id/dynamic2Recycler"
            android:text="@string/serials"
            android:fontFamily="@font/graphik_semibold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/seriesAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/series"
            app:layout_constraintBottom_toBottomOf="@id/series"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="26dp"
            android:text="@string/all"
            android:textColor="@color/purple_clickable_color"
            android:fontFamily="@font/graphik_medium"
            android:textSize="14sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/seriesRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintTop_toBottomOf="@id/series"
            app:layout_constraintStart_toStartOf="@id/series"
            app:layout_constraintEnd_toEndOf="parent"

            android:orientation="horizontal"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>